<resources>>

  <!-- Base application theme. -->
  <style name="Attiq.Theme.Dark" parent="Theme.AppCompat">
    <!-- Customize your theme here. -->
    <item name="android:windowActionBarOverlay">true</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="textReadStatusColor">@color/text_link_color_dark</item>
    <item name="alertDialogTheme">@style/Attiq.Theme.Dialog</item>
    <item name="toolbarNavigationButtonStyle">
      @style/Attiq.Widget.Toolbar.Button.Navigation
    </item>
    <item name="android:actionBarStyle">@style/Attiq.Widget.Toolbar</item>
    <!--<item name="android:windowEnterTransition">@android:transition/slide_bottom</item>-->
    <!--<item name="android:windowReturnTransition">@android:transition/slide_top</item>-->
  </style>

  <style name="Attiq.Theme.Light" parent="Theme.AppCompat.Light">
    <item name="android:windowActionBarOverlay">true</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="textReadStatusColor">@color/text_link_color_light</item>
    <item name="alertDialogTheme">@style/Attiq.Theme.Dialog</item>
    <item name="toolbarNavigationButtonStyle">
      @style/Attiq.Widget.Toolbar.Button.Navigation
    </item>
    <item name="android:actionBarStyle">@style/Attiq.Widget.Toolbar</item>
    <!--<item name="android:windowEnterTransition">@android:transition/slide_bottom</item>-->
    <!--<item name="android:windowReturnTransition">@android:transition/slide_top</item>-->
  </style>

  <style name="Attiq.Theme.Dark.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
  </style>

  <style name="Attiq.Theme.Light.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
  </style>
</resources>
