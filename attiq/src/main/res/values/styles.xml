<resources>

    <style name="Attiq"/>

    <style name="Attiq.Widget" parent="android:Widget"/>

    <!-- Base application theme. -->
    <style name="Attiq.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!--<item name="android:windowBackground">@drawable/attiq_icon</item>-->
    </style>

    <style name="Attiq.Theme.Dialog" parent="AlertDialog.AppCompat.Light">

    </style>

    <style name="Attiq.Theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarNavigationButtonStyle">
            @style/Attiq.Widget.Toolbar.Button.Navigation
        </item>
    </style>

    <style name="Attiq.Theme.Profile" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarNavigationButtonStyle">
            @style/Attiq.Widget.Toolbar.Button.Navigation
        </item>

        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="Attiq.Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Attiq.Theme.ActionBar" parent="Theme.AppCompat.Light">
        <item name="toolbarNavigationButtonStyle">
            @style/Attiq.Widget.Toolbar.Button.Navigation
        </item>
    </style>

    <style name="Attiq.Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Attiq.Widget.Toolbar.Subtitle"
           parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Attiq.Widget.Toolbar.Button.Navigation"
           parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Widget.Design.FloatingActionButton" parent="android:Widget">
        <item name="android:background">@drawable/design_fab_background</item>
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="exFabSize">normal</item>
        <item name="elevation">@dimen/design_fab_elevation</item>
        <item name="pressedTranslationZ">@dimen/design_fab_translation_z_pressed</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="borderWidth">@dimen/design_fab_border_width</item>
    </style>

    <style name="Attiq.Widget.Profile.Toolbar.Subtitle"
           parent="Attiq.Widget.Toolbar.Subtitle">
        <item name="android:paddingRight">@dimen/profile_image_size_margin</item>
    </style>
</resources>
