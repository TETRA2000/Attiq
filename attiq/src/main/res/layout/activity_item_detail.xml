<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    app:umanoFadeColor="#24000000"
    app:umanoPanelHeight="@dimen/comment_container_collapse"
    app:umanoScrollableView="@+id/comments_container"
    app:umanoShadowHeight="2dp">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="im.ene.lab.attiq.activities.ItemDetailActivity">

        <im.ene.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">

            <im.ene.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false"
                app:toolbarId="@+id/toolbar">

                <android.support.v7.widget.Toolbar
                    android:id="@id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:subtitleTextAppearance="@style/Attiq.Widget.Toolbar.Subtitle"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme.AppBarOverlay"/>

            </im.ene.support.design.widget.CollapsingToolbarLayout>
        </im.ene.support.design.widget.AppBarLayout>

        <include layout="@layout/content_item_detail"/>

    </android.support.design.widget.CoordinatorLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_container_expand">

        <View
            android:id="@+id/actions_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comment_container_collapse"
            android:background="@android:color/white"
            android:elevation="1dp"/>

        <android.support.v4.widget.NestedScrollView
            android:id="@id/comments_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/actions_container">

            <WebView
                android:id="@+id/item_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>