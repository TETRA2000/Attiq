<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    android:id="@+id/sliding_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="bottom"
    app:umanoFadeColor="#24000000"
    app:umanoPanelHeight="@dimen/comment_container_collapse"
    app:umanoScrollableView="@+id/comments_container"
    app:umanoShadowHeight="2dp"
    tools:context=".activities.ItemDetailActivity"
    tools:showIn="@layout/activity_item_detail">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="im.ene.lab.attiq.activities.ItemDetailActivity">

        <WebView
            android:id="@+id/item_content_web"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"/>

        <im.ene.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/Attiq.Theme.AppBarOverlay">

            <im.ene.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:theme="@style/Attiq.Theme.AppBarOverlay"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false"
                app:toolbarId="@+id/toolbar">

                <LinearLayout
                    android:id="@+id/toolbar_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/detail_bar_height"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/detail_title_margin_top"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="?attr/actionBarSize"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        android:layout_marginStart="?attr/actionBarSize"
                        android:gravity="left|start"
                        android:maxLines="@integer/detail_title_max_line"
                        android:padding="2dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>

                    <TextView
                        android:id="@+id/item_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="?attr/actionBarSize"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        android:layout_marginStart="?attr/actionBarSize"
                        android:gravity="left|start"
                        android:maxLines="@integer/detail_subtitle_max_line"
                        android:padding="2dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"/>
                </LinearLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/Attiq.Theme.AppBarOverlay"
                    app:subtitleTextAppearance="@style/Attiq.Widget.Toolbar.Subtitle"/>

            </im.ene.support.design.widget.CollapsingToolbarLayout>
        </im.ene.support.design.widget.AppBarLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_container_expand">

        <View
            android:id="@+id/actions_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comment_container_collapse"
            android:background="@android:color/white"
            android:elevation="1dp"/>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/comments_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/actions_container">

            <WebView
                android:id="@+id/item_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>