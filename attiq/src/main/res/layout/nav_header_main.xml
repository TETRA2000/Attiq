<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/header_account_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/header_account_icon"
            android:layout_width="@dimen/header_icon_size"
            android:layout_height="@dimen/header_icon_size"
            android:scaleType="centerInside"
            android:src="@android:drawable/sym_def_app_icon"
            app:riv_corner_radius="@dimen/header_icon_radius"
            app:riv_oval="false"/>

    </LinearLayout>

    <TextView
        android:id="@+id/header_account_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Welcome to Attiq"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/header_account_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Another Qiita client"/>

</LinearLayout>
