<?xml version="1.0" encoding="utf-8"?>
<android.support.design.internal.ForegroundLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/item_icon_padding"
    app:divider="@drawable/post_item_divider_horizontal_4dp"
    app:showDividers="middle">

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="@dimen/item_icon_size_small"
        android:layout_height="@dimen/item_icon_size_small"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:paddingEnd="@dimen/item_icon_padding"
        android:paddingLeft="@dimen/item_icon_padding"
        android:paddingRight="@dimen/item_icon_padding"
        android:paddingStart="@dimen/item_icon_padding"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
</android.support.design.internal.ForegroundLinearLayout>